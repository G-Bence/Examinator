<Window x:Class="Examinator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Examinator"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    
    
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FF26E8D3" Offset="0"/>
                <GradientStop Color="#FFA3EE0E" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <StackPanel x:Name="IntroBody" Orientation="Vertical" Margin="25,25,25,25" Background="#66FFFFFF" Visibility="Visible">
            <TextBlock TextWrapping="Wrap" TextAlignment="Center" FontSize="25" Text="Wellcome to the EXIMINATOR" Width="400" Height="35" Margin="15"/>
            <TextBlock TextWrapping="Wrap" TextAlignment="Left" VerticalAlignment="Center" FontSize="16" Text="Basic Tutorial:" Width="770" Height="35" Margin="15 10 0 0"/>
            <StackPanel Height="70" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center" Width="750">
                <TextBlock TextWrapping="Wrap" TextAlignment="Left" VerticalAlignment="Center" FontSize="14" Text="1. You will get a question and four answer options. &#10; Your task is to choose the corresponding option by clicking on it" Width="350" Height="60" Margin="15 0 0 0"/>
                <TextBlock TextWrapping="Wrap" TextAlignment="Left" VerticalAlignment="Center" FontSize="14" Text='2. Ater you selected the answer you have to push the green button with "Show correct answer" text on it.' Width="350" Height="60" Margin="20 0 0 0"/>
            </StackPanel>
            <TextBlock TextWrapping="Wrap" TextAlignment="Left" FontSize="14" Text='3. Following the program revealed the correct answer, you get a point. You will see your summarized score in the end.&#10;To continue you have to push the green button with the text "Continue" on it ' Width="710" Height="60" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <TextBlock TextWrapping="Wrap" TextAlignment="Center" FontSize="16" Text="To continue please type your full name and click the continue button down below:" Width="600" Height="35" Margin="0 40 0 10"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                <TextBox x:Name="NameInput" Width="200" Height="25" FontSize="14" Margin="0,0,10,0"  TextChanged="NameInput_TextChanged" Text="Enter your name" />
                <Button x:Name="ContinueButton" Content="Continue" Width="100" Height="25" Background="#FF32BE32" Click="ContinueButton_Click"/>
            </StackPanel>
            <TextBlock x:Name="WarningText" TextWrapping="Wrap" TextAlignment="Center" FontSize="14" Text='Invalid name, please enter a real one!' Width="800" Height="20" Margin="0 10 0 0" Foreground="Red" Opacity="0"/>
        </StackPanel>
        


        
        

        <StackPanel x:Name="GameBody" Orientation="Vertical" Margin="25,25,25,25" Background="#66FFFFFF" Visibility="Collapsed">
            <TextBlock x:Name="QCounterTB" TextWrapping="Wrap" TextAlignment="Center" FontSize="25" Text="Question #" Width="400" Height="35" Margin="15"/>
            <TextBlock x:Name="SCounterTB" TextWrapping="Wrap" TextAlignment="Center" FontSize="18" Text="- # / 10 -" Width="400" Height="25" Margin="-10"/>

            <Border BorderBrush="ForestGreen" BorderThickness="1" Margin="0 30 0 0">
                <StackPanel>
                    <TextBlock x:Name="QuestionTB"  TextWrapping="Wrap" TextAlignment="Center" VerticalAlignment="Center" FontSize="16" Text="TEXT OF QUESTION_#" Width="750" Height="25" HorizontalAlignment="Center" Grid.IsSharedSizeScope="True"/>
                    <StackPanel Height="180" Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center" Width="750">
                        <StackPanel Height="90" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center" Width="750">
                            <RadioButton x:Name="AnswerOp_1" GroupName="AnsOpts" Content="A; ANSWER_1" Width="375" Height="90" Cursor="AppStarting" HorizontalAlignment="Center" VerticalAlignment="Center" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                            <RadioButton x:Name="AnswerOp_2" GroupName="AnsOpts" Content="B; ANSWER_2" Width="375" Height="90" Cursor="AppStarting" HorizontalAlignment="Center" VerticalAlignment="Center" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                        </StackPanel>
                        <StackPanel Height="90" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center" Width="750">
                            <RadioButton x:Name="AnswerOp_3" GroupName="AnsOpts" Content="C; ANSWER_1" Width="375" Height="90" Cursor="AppStarting" HorizontalAlignment="Center" VerticalAlignment="Center" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                            <RadioButton x:Name="AnswerOp_4" GroupName="AnsOpts" Content="D; ANSWER_2" Width="375" Height="90" Cursor="AppStarting" HorizontalAlignment="Center" VerticalAlignment="Center" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                        </StackPanel>
                    </StackPanel>
                    <TextBlock x:Name="AnswerWarningText" TextWrapping="Wrap" TextAlignment="Center" FontSize="14" Text='You must to choose one answer' Width="750" Height="20" Margin="0 10 0 0" Foreground="Red" Opacity="0"/>
                    <Button x:Name="SCorrectAnswer" Content="Show correct answer" Width="150" Height="25" Margin="0,5,0,015" Background="Lime" Click="SCorrectAnswerButton_Click" />
                    <Button x:Name="NextTask" Content="Continue" Width="150" Height="25" Margin="0,5,0,015" Background="Lime" Click="NextTask_Click" Visibility="Collapsed"/>
                </StackPanel>
           </Border>
        </StackPanel>




        <StackPanel x:Name="ResultsBody" Orientation="Vertical" Margin="25,25,25,25" Background="#66FFFFFF" Visibility="Collapsed">
            <TextBlock x:Name="RTittleTB" TextWrapping="Wrap" TextAlignment="Center" FontSize="25" Text="RESULTS:" Width="400" Height="35" Margin="15"/>

            <TextBlock TextWrapping="Wrap" TextAlignment="Center" FontSize="18" Text="Congratulation! &#10;You did a great job!" Width="400" Height="50" Margin="50"/>
            <TextBlock x:Name="ResultsTB" TextWrapping="Wrap" TextAlignment="Center" FontSize="18" Text="- # / 10 -" Width="400" Height="25" Margin="-10"/>


            <TextBlock x:Name="FileWritenTB" TextWrapping="Wrap" TextAlignment="Center" FontSize="14" Text='Results are succesfully saved to #' Width="750" Height="20" Margin="0 110 0 0" Foreground="Red" Opacity="1"/>
        </StackPanel>

    </Grid>
</Window>
